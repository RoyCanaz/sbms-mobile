<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Create New"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Client"
            android:textColor="@color/colorLight"
            android:textStyle="bold"
            android:textSize="18sp" />
        <Spinner
            android:background="@color/grey"
            android:id="@+id/clients_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_marginTop="60dp"
            android:hint="Date Of Visit"
            android:id="@+id/date_of_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
             />


        <Button
            android:layout_marginTop="60dp"
            android:id="@+id/save_visit_plan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyleprimary"
            android:text="Create Client Visit"
            android:drawableLeft="@drawable/ic_save"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>